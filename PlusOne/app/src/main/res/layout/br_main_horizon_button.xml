                android:text="속초시"/>

            <Button
                android:id="@+id/gw_samc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/button_layout"
                android:text="삼척시"/>

            <Button
                android:id="@+id/gw_hongc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/button_layout"
                android:text="홍천군"/>

            <Button
                android:id="@+id/gw_cc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
