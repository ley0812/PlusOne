                android:text="양양군"/>

            <Button
                android:id="@+id/gw_dh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/button_layout"
                android:text="동해시"/>

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>