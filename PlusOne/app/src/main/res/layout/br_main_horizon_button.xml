            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/gw_hs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/button_layout"
                android:text="횡성군"/>

            <Button
                android:id="@+id/gw_yw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/button_layout"
                android:text="영월군"/>

            <Button
                android:id="@+id/gw_pc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/button_layout"
                android:text="평창군"/>

            <Button
                android:id="@+id/gw_js"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/button_layout"
                android:text="정선군"/>

            <Button
                android:id="@+id/gw_cw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/button_layout"
                android:text="철원군"/>

            <Button
                android:id="@+id/gw_hc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/button_layout"
                android:text="화천군"/>

            <Button
                android:id="@+id/gw_yg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/button_layout"
                android:text="양구군"/>

            <Button
                android:id="@+id/gw_ij"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/button_layout"
                android:text="인제군"/>

            <Button
                android:id="@+id/gw_wj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/button_layout"
                android:text="원주시"/>

            <Button
                android:id="@+id/gw_gs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/button_layout"
                android:text="고성군"/>

            <Button
                android:id="@+id/gw_gn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/button_layout"
                android:text="강릉시"/>

            <Button
                android:id="@+id/gw_tb"
                android:layout_width="wrap_content"
